@model SimpleBlog.Areas.Admin.ViewModels.UsersIndex

@{
    ViewBag.Title = "Users";
}

<h1>Users</h1>

<div class="btn-toolbar">
    <a href="@Url.Action("new")" class="btn btn-primary btn-sm"><li class="glyphicon glyphicon-plus"></li> Create User</a>
</div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@string.Join(", ", user.Roles.Select(role => role.Name))</td>
                    <td>
                        <div class="btn-group">
                            <a href="@Url.Action("edit", new { user.Id})" class="btn btn-xs btn-primary">
                                <li class="glyphicon glyphicon-edit"></li>
                                Edit
                            </a>
                            <a href="@Url.Action("resetpassword", new { user.Id})" class="btn btn-xs btn-default">
                            <li class="glyphicon glyphicon-lock"></li>
                                Reset Password
                            </a>
                            <a href="@Url.Action("delete", new { user.Id})" class="btn btn-xs btn-danger" data-post ="Are you sure you want to delete @user.Username?">
                                <li class="glyphicon glyphicon-delete"></li>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
